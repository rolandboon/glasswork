{
  "name": "glasswork",
  "version": "0.1.0",
  "description": "A transparent, Lambda-optimized web framework for building OpenAPI-compliant REST APIs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "framework",
    "hono",
    "lambda",
    "serverless",
    "typescript",
    "dependency-injection",
    "awilix",
    "openapi",
    "rest-api",
    "aws-lambda",
    "valibot"
  ],
  "author": "Roland Boon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolandboon/glasswork.git"
  },
  "bugs": {
    "url": "https://github.com/rolandboon/glasswork/issues"
  },
  "homepage": "https://github.com/rolandboon/glasswork#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.902.0",
    "@aws-sdk/lib-dynamodb": "^3.902.0",
    "@hono/swagger-ui": "^0.5.0",
    "awilix": "^12.0.0",
    "hono": "^4.9.0",
    "hono-openapi": "^0.4.0",
    "valibot": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^22.18.8",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.5.3",
    "@valibot/to-json-schema": "^1.3.0",
    "deepmerge": "^4.3.1",
    "openapi-types": "^12.1.3"
  }
}
