{
  "name": "glasswork",
  "version": "0.9.2",
  "description": "A transparent, Lambda-optimized web framework for building OpenAPI-compliant REST APIs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "framework",
    "hono",
    "lambda",
    "serverless",
    "typescript",
    "dependency-injection",
    "awilix",
    "openapi",
    "rest-api",
    "aws-lambda",
    "valibot"
  ],
  "author": "Roland Boon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolandboon/glasswork.git"
  },
  "bugs": {
    "url": "https://github.com/rolandboon/glasswork/issues"
  },
  "homepage": "https://github.com/rolandboon/glasswork#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check . --write",
    "lint:ci": "biome check .",
    "prepublishOnly": "npm run build && npm test",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@aws-sdk/client-cloudwatch": "^3.900.0",
    "@aws-sdk/client-dynamodb": "^3.900.0",
    "@aws-sdk/client-sesv2": "^3.900.0",
    "@aws-sdk/client-ssm": "^3.900.0",
    "@aws-sdk/lib-dynamodb": "^3.900.0",
    "@casl/ability": "^6.7.3",
    "@casl/prisma": "^1.4.0",
    "@hono/swagger-ui": "^0.5.0",
    "@prisma/client": "^6.0.0",
    "awilix": "^12.0.0",
    "better-auth": "^1.0.0",
    "dotenv": "^16.0.0",
    "hono": "^4.9.0",
    "hono-openapi": "^1.0.0",
    "valibot": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-cloudwatch": {
      "optional": true
    },
    "@aws-sdk/client-dynamodb": {
      "optional": true
    },
    "@aws-sdk/client-sesv2": {
      "optional": true
    },
    "@aws-sdk/client-ssm": {
      "optional": true
    },
    "@aws-sdk/lib-dynamodb": {
      "optional": true
    },
    "@casl/prisma": {
      "optional": true
    },
    "@hono/swagger-ui": {
      "optional": true
    },
    "@prisma/client": {
      "optional": true
    },
    "@casl/ability": {
      "optional": true
    },
    "better-auth": {
      "optional": true
    },
    "dotenv": {
      "optional": true
    }
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch": "^3.932.0",
    "@aws-sdk/client-dynamodb": "^3.932.0",
    "@aws-sdk/client-sesv2": "^3.932.0",
    "@aws-sdk/client-ssm": "^3.932.0",
    "@aws-sdk/lib-dynamodb": "^3.932.0",
    "@biomejs/biome": "^2.2.5",
    "@casl/ability": "^6.7.3",
    "@casl/prisma": "^1.5.2",
    "@hono/swagger-ui": "^0.5.2",
    "@prisma/client": "^6.19.0",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.10",
    "awilix": "^12.0.5",
    "dotenv": "^17.2.3",
    "hono": "^4.10.6",
    "hono-openapi": "^1.1.1",
    "html-to-text": "^9.0.5",
    "mermaid": "^11.12.1",
    "mjml": "^4.17.1",
    "typescript": "^5.9.3",
    "valibot": "^1.1.0",
    "vitepress": "^1.6.4",
